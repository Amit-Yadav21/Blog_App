<body>
    <!-- Navbar -->
    <!-- <h2>navbar</h2> -->
    <div class="navbar">
        <ul>
            <% data.forEach(item=> { %>
                <div class="h2">
                    <h2>Navbar</h2>
                </div>
                <div class="box1">
                    <div class="libox">
                        <li><a class="signup-btn" href="http://localhost:4000/register">Sign Up</a></li>
                        <li><a class="signup-btn" href="http://localhost:4000/login">Login</a></li>
                        <li><a class="signup-btn" href="http://localhost:4000/uploadImageFile">Upload Post</a></li>
                        <li><a class="signup-btn" href="http://localhost:4000/updatedata">Update Profile</a></li>
                        <li><a class="signup-btn" href="http://localhost:4000/deleteprofile/profile">Delete Profile</a></li>
                        <li> <a class="signup-btn" href="http://localhost:4000/readAlldata">See all post</a></li>


                        
                    </div>
                    <div class="profileImagebox">                    
                        <li class="profile">
                            <% if (item.profile) { %>
                                <% if (item.profile.endsWith('.png') || item.profile.endsWith('.jpg') || item.profile.endsWith('.jpeg') || item.profile.endsWith('.webp')) { %>
                                    <img class="profile-image" src="<%= item.profile %>" alt="Image">
                            <% } else { %>
                                    <p>Invalid Format</p>
                                <% } %>
                            <% } %>
                        </li>
                    </div>
                </div>
            <% }) %>
        </ul>
    </div>

    <h1>User Data</h1>


    <table class="table">
        <tr>
          <th>Uploaded User Post</th>
        </tr>
        <% postdata.forEach(item => { %>
          <tr>
            <td>
              <% if (item.UserPost) { %>
                <% if (item.UserPost.endsWith('.jpg') || item.UserPost.endsWith('.jpeg') || item.UserPost.endsWith('.png') || item.UserPost.endsWith('.gif')) { %>
                  <img src="<%= item.UserPost %>" alt="Image">
                <% } else if (item.UserPost.endsWith('.pdf')) { %>
                  <embed src="<%= item.UserPost %>" type="application/pdf" width="100%" height="500px" />
                <% } else { %>
                  <p>File type not supported.</p>
                <% } %>
              <% } %>
            </td>
          </tr>
        <% }) %>
      </table>
      

      
  



